{% extends 'base.html.twig' %}

{% block title %}Device{% endblock %}

{% block body %}

<div>
    {% for device in devices %}
        <h4>{{ device }}</h4>
        {{ device.deviceType }}
        <p>
            <a href="{{ path('device_show', {id: device.id}) }}">View</a>
            <a href="{{ path('device_edit', {id: device.id}) }}">Edit</a>
            <a href="{{ path('device_delete', {id: device.id}) }}">Delete</a>
        </p>
    {% else %}
        No records
    {% endfor %}
    <a href="{{ path('device_new') }}">New device</a>
</div>
{% endblock %}
